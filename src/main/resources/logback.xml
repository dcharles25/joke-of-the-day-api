<configuration>
  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d{dd MMM yyyy HH:mm:ss} [%thread] %-5level %logger{36} -%kvp- %msg%n</pattern>
    </encoder>
  </appender>
  
  <logger name="org.mongodb.driver" level="warn"/>

  <root level="info">
    <appender-ref ref="STDOUT" />
  </root>
</configuration>
